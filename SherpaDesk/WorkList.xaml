<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="SherpaDesk.WorkList"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SherpaDesk"
    xmlns:common="using:SherpaDesk.Common"
    xmlns:Controls="using:WinRTXamlToolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="using:Telerik.UI.Xaml.Controls.Grid" 
    xmlns:gridPrimitives="using:Telerik.UI.Xaml.Controls.Grid.Primitives"    
    mc:Ignorable="d" Loaded="pageRoot_Loaded">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid x:Name="grid" Style="{StaticResource LayoutRootStyle}" Background="Transparent" RequestedTheme="Light">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="DetailsFrame" Grid.RowSpan="2" Grid.Column="0" Margin="0,0,0,0" />
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="pageTitle" Grid.Column="0" VerticalAlignment="Top" Margin="0,170,0,70" Style="{StaticResource PageHeaderTextStyle}" Text="Open Tickets" FontWeight="Normal" />
            <Image Source="Assets/arrow.gif" Grid.Column="0" Width="11" Height="13" Margin="18,235,0,0" HorizontalAlignment="Left" />
            <Button x:Name="ActionButton" Grid.Column="0" Content="Selected" Margin="35,235,0,0" FontSize="20" VerticalAlignment="Top" RenderTransformOrigin="0,0" Foreground="White" Background="#FF4E7492" BorderBrush="#FF004174" FontWeight="Normal">
                <Button.Flyout>
                    <MenuFlyout Placement="Right">
                        <MenuFlyoutItem x:Name="MarkReadMenu" Text="Mark Read" Tapped="MarkReadMenu_Tapped" />
                        <MenuFlyoutItem x:Name="CloseMenu" Text="Close" Tapped="CloseMenu_Tapped" />
                        <MenuFlyoutItem x:Name="DeleteMenu" Text="Delete" Tapped="DeleteMenu_Tapped" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <telerik:RadDataGrid  x:Name="ItemsGrid" Height="500" ScrollViewer.VerticalScrollMode="Auto" UserGroupMode="Disabled" Grid.Column="1" Grid.Row="1" AutoGenerateColumns="False" UserColumnReorderMode="None" UserFilterMode="Enabled" UserSortMode="Single" GridLinesVisibility="Horizontal" BorderBrush="#FF006AC1" SelectionMode="None">
            <telerik:RadDataGrid.Columns>
                <telerik:DataGridTemplateColumn Width="50">
                    <telerik:DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTemplateColumn.HeaderStyle>
                    <telerik:DataGridTemplateColumn.Header>
                        <Grid HorizontalAlignment="Stretch">
                            <CheckBox x:Name="HeaderGridCheckbox" HorizontalAlignment="Left" Checked="HeaderGridCheckbox_Checked" Unchecked="HeaderGridCheckbox_Unchecked" />
                        </Grid>                        
                    </telerik:DataGridTemplateColumn.Header>
                    <telerik:DataGridTemplateColumn.CellContentTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="GridCheckbox" IsChecked="{Binding IsChecked}" Margin="8,0,0,0" HorizontalAlignment="Left" Tag="{Binding TicketNumber}" Checked="GridCheckbox_Checked" Unchecked="GridCheckbox_Unchecked" />
                        </DataTemplate>
                    </telerik:DataGridTemplateColumn.CellContentTemplate>
                </telerik:DataGridTemplateColumn>
                <telerik:DataGridTemplateColumn Header="Tkt#" Width="50">
                    <telerik:DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTemplateColumn.HeaderStyle>
                    <telerik:DataGridTemplateColumn.CellContentTemplate>
                        <DataTemplate>
                            <Button x:Name="GridTicketId" Content="{Binding TicketNumber}" Tag="{Binding TicketKey}" Click="GridTicketId_Click" Background="#FFD3D1E7" />
                        </DataTemplate>
                    </telerik:DataGridTemplateColumn.CellContentTemplate>
                </telerik:DataGridTemplateColumn>
                <telerik:DataGridTextColumn PropertyName="UserFullName" Header="End User">
                    <telerik:DataGridTextColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTextColumn.HeaderStyle>
                </telerik:DataGridTextColumn>
                <telerik:DataGridTextColumn PropertyName="TechnicianFullName" Header="Tech Name">
                    <telerik:DataGridTextColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTextColumn.HeaderStyle>
                </telerik:DataGridTextColumn>
                <telerik:DataGridTextColumn PropertyName="AccountName" Header="Account">
                    <telerik:DataGridTextColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTextColumn.HeaderStyle>
                </telerik:DataGridTextColumn>
                <telerik:DataGridTextColumn PropertyName="ClassName" Header="Class">
                    <telerik:DataGridTextColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTextColumn.HeaderStyle>
                </telerik:DataGridTextColumn>
                <telerik:DataGridTextColumn PropertyName="СreatedTime" Header="Time">
                    <telerik:DataGridTextColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTextColumn.HeaderStyle>
                </telerik:DataGridTextColumn>
                <telerik:DataGridTextColumn PropertyName="DaysOld" Header="Days Old">
                    <telerik:DataGridTextColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTextColumn.HeaderStyle>
                </telerik:DataGridTextColumn>
                <telerik:DataGridTemplateColumn Header="Status">
                    <telerik:DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="gridPrimitives:DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF006AC1"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </telerik:DataGridTemplateColumn.HeaderStyle>
                    <telerik:DataGridTemplateColumn.CellContentTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center" Text="{Binding Status}" FontWeight="Bold" />
                        </DataTemplate>
                    </telerik:DataGridTemplateColumn.CellContentTemplate>
                </telerik:DataGridTemplateColumn>
            </telerik:RadDataGrid.Columns>
        </telerik:RadDataGrid>
        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>
